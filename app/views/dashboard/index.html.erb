<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <div class="box box-primary">
        <div class="box-body box-profile">
          <%= image_tag current_user.avatar, class: "profile-user-img img-responsive img-circle", alt: "user-avatar" %>

          <h3 class="profile-username text-center"><%= current_user.nickname %></h3>

          <p class="text-muted text-center">Pontuação</p>

          <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
              <b>Teamhero Points</b> <a class="pull-right"><%= @teamhero_points %></a>
            </li>
            <li class="list-group-item">
              <b>Pull Requests</b> <a class="pull-right"><%= @pr_points %></a>
            </li>
            <li class="list-group-item">
              <b>Issue</b> <a class="pull-right"><%= @issue_points %></a>
            </li>
          </ul>
          <!-- <a href="#" class="btn btn-primary btn-block"><b>Qualquer ação</b></a> -->
        </div>
      </div>

    </div>
    <div class="col-md-8">
      <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Badges</h3>
        </div>

        <div class="box-body">
          <%= render partial: 'badge', collection: @badges %>
        </div>
      </div>
      <!-- <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Organizações</h3>
        </div>

        <div class="box-body">
          <% @organization_groups.each do |group| %>
            <div class="row">
              <%= render partial: 'organization', collection: group%>
            </div>
          <% end %>
        </div>
      </div> -->
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Exemplo de gráfico</h3>
        </div>
        <div class="box-body" style="display: block;">
          <canvas id="lineChart" width="250" height="125"></canvas>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Exemplo de gráfico</h3>
        </div>
        <div class="box-body" style="display: block;">
          <canvas id="radarChart" width="250" height="125"></canvas>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Exemplo de gráfico</h3>
        </div>
        <div class="box-body" style="display: block;">
          <canvas id="pieChart" width="250" height="125"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>
